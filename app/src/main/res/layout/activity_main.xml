<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_laptop_mac_black_24dp"
            android:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo1"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:src="@drawable/ic_laptop_mac_black_24dp"
            android:text="Inceptum 2K18"
            android:textSize="32dp"
            android:textStyle="bold"
            android:tint="@color/colorAccent" />

        <android.support.v7.widget.CardView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="@dimen/cardview_compat_inset_shadow">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_play_circle_filled_black_24dp"
                android:drawableTint="@color/colorAccent"
                android:padding="20dp"
                android:text="Play" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/play"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="@dimen/cardview_compat_inset_shadow">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_confirmation_number_black_24dp"
                android:drawableTint="@color/colorAccent"
                android:padding="20dp"
                android:text="Score" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="@dimen/cardview_compat_inset_shadow">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_live_tv_black_24dp"
                android:drawableTint="@color/colorAccent"
                android:padding="20dp"
                android:text="Tv Shows" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>